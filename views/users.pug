html
    head
        title
    body
        h2= message

        table
            thead
                tr
                    th Name
                    th Age
            tbody
                each user in data
                    tr
                        td=user.name
                        td=user.age
                        td
                            form(method='post', action='/users/' + user.id)
                                input(type='hidden', value='DELETE', name='_method')
                                button(type='submit', value='Delete') Delete